<h1>Listing events</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Happening on</th>
    <th>Venue</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= link_to event.title, "http://www.maps.google.com/?q="+event.title %></td>
    <td><%= event.happening_on %></td>
    <td><%= event.venue.name %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit Event', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add a New Event', new_event_path %>
