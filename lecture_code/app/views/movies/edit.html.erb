<h1>Editing Movie #<%= @movie.id %></h1>

<%= form_tag(movie_url(@movie.id), :method => :put) do %>
  <p><%= label_tag :title %>
    <%= text_field_tag :title, @movie.title %></p>


  <p><%= label_tag :year %>
    <%= text_field_tag :year, @movie.year %></p>

  <p><%= submit_tag %></p>
<% end %>

<%= form_for @movie do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :year %>
    <%= f.text_field :year %>
  </p>

  <p><%= f.submit %></p>
<% end %>
